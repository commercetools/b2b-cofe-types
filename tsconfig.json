{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2019",
        "lib": [
            "es2019",
        ],
        "baseUrl": "./",
        "declaration": true,
        "paths": {
            "@Types/*": ["types/*"],
        },
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "./build",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "isolatedModules": true,
        "noEmit": false,
    },
    "include": [
        "./types"
    ]
}
